# Core Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your-secret-key

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/aiogames

# Game API Configuration
GAME_API_URL=https://your-worker-subdomain.workers.dev
GAME_API_CACHE_TIMEOUT=3600000  # 1 hour in milliseconds

# Download Services
ARIA2_HOST=localhost
ARIA2_PORT=6800
ARIA2_SECRET=your-aria2-secret

JD_EMAIL=your-myjdownloader-email
JD_PASSWORD=your-myjdownloader-password
JD_DEVICE_ID=your-device-id

QB_URL=http://localhost:8080
QB_USERNAME=admin
QB_PASSWORD=adminadmin

# Optional: Steam Integration
# Remove or leave empty to disable Steam features
STEAM_API_KEY=
STEAM_UPDATE_CHECK_INTERVAL=3600000 # 1 hour in milliseconds

# Optional: SteamDB Integration
# Set to true to enable SteamDB features
STEAMDB_ENABLED=false
STEAMDB_REQUEST_DELAY=5000 # 5 seconds between requests
STEAMDB_MAX_RETRIES=3